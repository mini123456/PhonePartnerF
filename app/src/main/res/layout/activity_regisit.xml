<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regisit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phonepartner.activity.RegisterActivity">
<include layout="@layout/head"></include>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px_105"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dimen_px_40"
                android:layout_height="@dimen/dimen_px_40"
                android:src="@mipmap/phone"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dimen_px_30"/>

            <EditText
                android:id="@+id/etRegisterPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px_40"
                android:layout_marginLeft="@dimen/dimen_px_30"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_px_30"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_marginLeft="@dimen/dimen_px_30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px_105"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dimen_px_40"
                android:layout_height="@dimen/dimen_px_40"
                android:src="@mipmap/miama"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dimen_px_30"/>
            <EditText
                android:id="@+id/etRegisterPwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px_40"
                android:layout_marginLeft="@dimen/dimen_px_30"
                android:background="@null"
                android:hint="设置您的登录密码"
                android:inputType="textPassword"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_px_30"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_marginLeft="@dimen/dimen_px_30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px_105"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dimen_px_40"
                android:layout_height="@dimen/dimen_px_40"
                android:src="@mipmap/pwd2"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dimen_px_30"/>
            <EditText
                android:id="@+id/etCheckPwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px_40"
                android:layout_marginLeft="@dimen/dimen_px_30"
                android:background="@null"
                android:hint="确认您的登录密码"
                android:inputType="textPassword"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_px_30"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_marginLeft="@dimen/dimen_px_30"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px_105"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dimen_px_40"
                android:layout_height="@dimen/dimen_px_40"
                android:src="@mipmap/pwd2"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dimen_px_30"/>
            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px_40"
                android:layout_marginLeft="@dimen/dimen_px_30"
                android:background="@null"
                android:hint="请输入您的姓名"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_px_30"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_marginLeft="@dimen/dimen_px_30"/>
        <TextView
            android:layout_width="@dimen/dimen_px_200"
            android:layout_height="@dimen/dimen_px_60"
            android:layout_marginTop="@dimen/dimen_px_50"
            android:layout_marginBottom="@dimen/dimen_px_50"
            android:layout_gravity="left"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="紧急联系人"
            android:background="@drawable/corners_blue_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px_105"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dimen_px_40"
                android:layout_height="@dimen/dimen_px_40"
                android:src="@mipmap/pwd2"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dimen_px_30"/>

            <EditText
                android:id="@+id/etEmName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px_40"
                android:layout_marginLeft="@dimen/dimen_px_30"
                android:background="@null"
                android:hint="请输入紧急联系人姓名"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_px_30"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_marginLeft="@dimen/dimen_px_30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px_105"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dimen_px_40"
                android:layout_height="@dimen/dimen_px_40"
                android:src="@mipmap/pwd2"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dimen_px_30"/>
            <EditText
                android:id="@+id/etEmPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px_40"
                android:layout_marginLeft="@dimen/dimen_px_30"
                android:background="@null"
                android:hint="请输入紧急联系人电话"
                android:inputType="phone"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_px_30"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"
            android:layout_marginLeft="@dimen/dimen_px_30"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="我接收注册条款和隐私政策"
            android:layout_marginLeft="@dimen/dimen_px_30"
            android:layout_marginTop="@dimen/dimen_px_30"/>
        <Button
            android:id="@+id/btn_regist"
            android:layout_width="@dimen/dimen_px_650"
            android:layout_height="@dimen/dimen_px_90"
            android:background="@color/mainBlue"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_px_65"
            android:textColor="@color/white"
            android:text="注册"
            android:textSize="@dimen/dimen_px_30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dimen_px_30"
            android:layout_marginTop="@dimen/dimen_px_30"
            android:textSize="@dimen/dimen_px_30"
            android:text="我没有eChat手机伴侣"
            android:textColor="@color/mainBlue"/>
    </LinearLayout>
</ScrollView>

</LinearLayout>
