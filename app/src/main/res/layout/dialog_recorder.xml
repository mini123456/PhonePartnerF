<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/dialog_loading_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="5s"
        android:gravity="center"
        android:id="@+id/countdown"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/id_recorder_dialog_icon"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@mipmap/recorder" />

        <ImageView
            android:id="@+id/id_recorder_dialog_voice"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@mipmap/v1" />
    </LinearLayout>


    <TextView
        android:id="@+id/id_recorder_dialog_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="手指上滑取消发送"
        android:textColor="#ffffff" />

</LinearLayout>